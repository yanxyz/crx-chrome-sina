{
  "name": "Chrome Sina",
  "version": "1.2.1",
  "description": "Check Chrome updates from Sina downloads site.",
  "manifest_version": 2,
  "minimum_chrome_version": "57",
  "icons": {
    "128": "img/icon-128.png",
    "16": "img/icon-16.png",
    "48": "img/icon-48.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "permissions": [
    "http://down.tech.sina.com.cn/",
    "storage"
  ]
}
